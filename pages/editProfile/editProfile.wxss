/**index.wxss**/

page {
  background-color: lightgray;
  width: 100%;
  height: 100%;
  background-color: white;
  overflow: hidden;
}

.container {
  height: 100%;
  min-height: 100%;
  max-height: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.content {
  width: 90%;
  height: 130rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.avatar-image {
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border-radius: 65rpx;
}

.profile-input {
  text-align: right;
}

.nickname.content{
  height: 80rpx;
  margin-top: 80rpx;
  border-bottom: 1px solid #D6D6D6;
}

.mobile.content{
  height: 80rpx;
  margin-top: 80rpx;
  border-bottom: 1px solid #D6D6D6;
}

.save-button {
  width: 90%;
  height: 90rpx;
  font-size: 28rpx;
  line-height: 90rpx;
  margin-top: 100rpx;
}