/**index.wxss**/

page {
  width: 100%;
  height: 100%;
  overflow: auto;
}


.scroll-view {
  width: 100%;
  height: 100%;
}

.scroll-view-wrap {
  width: 100%;
  height: auto;
  padding-bottom: 40rpx;
  -webkit-overflow-scrolling: touch;
}

.scroll-view-header {
  width: 90%;
  height: 232rpx;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
}

.header-title {
  height: 84rpx;
  line-height: 84rpx;
  flex:1;
  margin-top: 48rpx;
  color: #5D646E;
  font-size: 60rpx;
  overflow: hidden;
  text-overflow: hidden;
  white-space: nowrap;
  text-align: left;
}

.header-edit {
  width: 44rpx;
  height: 44rpx;
  margin: 74rpx 0 0 20rpx;

}

.content {
  width: 100%;
  flex: 1;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.input-content {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin: 60rpx 0 40rpx 0; 
}

.input-content-flex {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.folder-name {
  width: 90%;
  height: 100%;
  font-size: 60rpx;
  color: #5D646E;
  flex: 1;
}

.edit-button {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.edit-button.save {
  width: 44rpx;
  height: 32rpx;
  margin-left: 20rpx;
  margin-top: 22rpx;
}

.content-list {
  background-color: white;
  width: 100%;
  flex: 1;
  overflow: hidden;
}

.list-item {
  width: 90%;
  margin: 0 0 40rpx 5%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  box-shadow: 0 0 40rpx #DCDDE2;
  border-radius: 6rpx;
  overflow: hidden;
}

.list-item:first-child {
  margin-top: 60rpx;
}

.list-item:last-child {
  margin-bottom: 60rpx;
}

.item-header {
  width: 100%;
  text-align: left;
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 20rpx 0 0 30rpx;
  color: #5D646E;
}

.note-text {
  width: 90%;
  min-height: 60rpx;
  line-height: 56rpx;
  margin: 20rpx 0 0 30rpx;
  font-size: 30rpx;
  color: black;
  text-align: left;
}

.item-mark {
  width: 90%;
  min-height: 60rpx;
  max-height: 220rpx;
  line-height: 56rpx;
  margin: 10rpx 0 0 30rpx;
  font-size: 26rpx;
  text-align: left;
  border-left: 4rpx solid #5D646E;
  color: #9B9B9B;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-item-footer {
  width: 100%;
  height: 80rpx;
}

.delete-button {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  float: right;
  margin-right: 5%;
  font-size: 24rpx;
  color: #9B9B9B;
  text-align: right;
}

.show-empty {
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.show-empty .show-empty-text {
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  margin-top: 26rpx;
  font-size: 34rpx;
  color: #9B9B9B;
  text-align: center;
}

.show-empty .show-empty-text:first-child {
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  margin-top: 388rpx;
  font-size: 34rpx;
  color: #9B9B9B;
  text-align: center;
}








