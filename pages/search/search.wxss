/**index.wxss**/

page {
  background-color: lightgray;
  width: 100%;
  height: 100%;
  background-color: white;
  overflow: scroll;
}

.container {
  width: 100%;
  height: auto;
  background-color: white;
  padding-top: 100rpx;
  margin-bottom: 40rpx; 
  background-color: red;
}

.content {
  width: 100%;
  height: auto;
  background-color: white;
  padding-bottom: 40rpx; 
  margin-top: 200rpx;
}

.header {
  width: 100%;
  height: 150rpx;
  background-color: white;
  position: fixed;
  top: 0;
  left: 0;
}

.no-data {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 260rpx;
  font-size: 34rpx;
  color: #9B9B9B;
  text-align: center;
}

.search-wrap {
  width: 90%;
  height: 110rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  text-indent: 10rpx;
  box-shadow: 0 0 80px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  position: fixed;
  top:50rpx;
  left: 5%;
  background-color: white;
}

.search-icon {
  width: 80rpx;
  height: 100%;
  margin-left: 30rpx;
}

.search-input {
  height: 100%;
  flex:1;
}

.title {
  font-size: 60rpx;
  color: black;
  width: 90%;
  margin: 60rpx 0 60rpx 7%;
  font-weight: bold;
}

.book-item {
  width: 86%;
  height: 218rpx;
  margin-left: 7%;
  margin-bottom: 72rpx;
  display: flex;
  flex-direction: row;
}

.book-item:first {
  margin-top: 40rpx;
}

.book-item-left {
  width: 154rpx;
  height: 100%;
  text-align: center;
  border-right: 1px solid #4A4A4A;
  margin-right: 20rpx;
  box-shadow: 0 2px 4px #9B9B9B;
}

.book-item-right {
  flex: 1;
  height: 100%;
}

.sub-text {
  font-size: 24rpx;
  line-height: 28rpx;
  margin-bottom: 30rpx;
  color: #4A4A4A;
}

.sub-text.name {
  font-size: 28rpx;
  color: black;
}