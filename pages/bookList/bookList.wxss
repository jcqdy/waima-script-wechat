/**index.wxss**/

page {
  background-color: lightgray;
  width: 100%;
  height: 100%;
  background-color: white;
  overflow: scroll;
}

.container {
  width: 100%;
  height: auto;
  background-color: white;
  padding-top: 100rpx;
  margin-bottom: 40rpx; 
  background-color: red;
}

.content {
  width: 100%;
  height: auto;
  background-color: white;
  padding-bottom: 40rpx; 
}

.title {
  font-size: 60rpx;
  color: black;
  width: 90%;
  margin: 60rpx 0 60rpx 7%;
  font-weight: bold;
}

.book-item {
  width: 86%;
  height: 218rpx;
  margin-left: 7%;
  margin-bottom: 72rpx;
  display: flex;
  flex-direction: row;
}

.book-item:first {
  margin-top: 40rpx;
}

.book-item-left {
  width: 154rpx;
  height: 100%;
  text-align: center;
  margin-right: 20rpx;
  box-shadow: 0 2px 4px #9B9B9B;
}

.book-item-right {
  flex: 1;
  height: 100%;
}

.sub-text {
  font-size: 24rpx;
  line-height: 28rpx;
  margin-bottom: 30rpx;
  color: #4A4A4A;
}

.sub-text.name {
  font-size: 32rpx;
  color: black;
  font-weight: bold;
  margin-top: 6rpx;
}

.back-book {
  width: 210rpx;
  height: 56rpx;
  background-color: #3883EB;
  border-radius: 6rpx;
  padding: 0 14rpx 0 14rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: -30rpx 0 50rpx 0;
  margin-left: 7%;
}

.back-book-title {
  width: auto;
  height: 56rpx;
  line-height: 56rpx;
  color: white;
  text-align: left;
  font-size: 32rpx;
}

.back-book-image {
  width: 38rpx;
  height: 32rpx;
}