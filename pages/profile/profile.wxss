/**index.wxss**/

page {
  background-color: rgb(235, 240, 242);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.userinfo {
  width: 100%;
  height: 306rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  flex: 2;
  width: 100%;
  position: relative;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 56rpx 0 26rpx 0;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: black;
  font-weight: bold;
  text-align: center;
}

.profile-arrow {
  width: 20rpx;
  height: 36rpx;
  position: absolute;
  right: 80rpx;
  bottom: 100rpx;
}


/*==========*/

.operation-container {
  width: 100%;
  flex: 8;
  margin-top: 20rpx;
}

.operation-item {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  align-items: center;
}

.operation-item-left {
  flex: 1;
  width: 400rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  align-items: center;
}

.operation-item-right {
  flex: 1;
  height: 100%;
  line-height: 20rpx;
  text-align: right;
  padding-right: 50rpx;
  font-size: 28rpx;
}

.operation-item-right.last {
  line-height: 35rpx;
}

.sub-text {
  font-size: 24rpx;
  color: gray;
}

.sub-suffix {
  font-size: 24rpx;
  color: gray;
}

.operation-readed {
  margin-top: 20rpx;
}

.operation-icon {
  width: 55rpx;
  height: 55rpx;
  margin: 0 20rpx 0 60rpx;
}
