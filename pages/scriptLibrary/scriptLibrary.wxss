/**index.wxss**/

page {
  background-color: lightgray;
  width: 100%;
  height: 100%;
}

.container {
  box-sizing: border-box;
  background-color: white;
  flex-direction: column;
  overflow: scroll;
}

.swiper {
  width: 100%;
  height: 364rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.search-wrap {
  width: 90%;
  height: 110rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin: 100rpx 0 0 5%;
  text-indent: 10rpx;
  box-shadow: 0 0 80px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
}

.search-icon {
  width: 80rpx;
  height: 100%;
  margin-left: 30rpx;
}

.search-input {
  height: 100%;
  flex:1;
  color: #9B9B9B;
}


.section {
  width: 100%;
  height: auto;
  margin-top: 60rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.section-header {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
}

.section-header-title {
  flex: 2;
  height: 100%;
  font-size: 34rpx;
  font-weight: bold;
}

.section-header-more {
  width: 200rpx;
  text-align: right;
  font-size: 28rpx;
  color: #1971E9;
}

/*剧本分类*/

.category-list {
  width: 95%;
  height: 370rpx;
  margin-left: 4%;
  white-space: nowrap; 
}

.category-item {
  display: inline-block;
  width: 290rpx;
  height: 334rpx;
  box-sizing: border-box;
  margin: 20rpx 40rpx 0 10rpx;
  color: black;
  text-align: center;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
}

.category-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-item-image {
  width: 200rpx;
  height: 160rpx;
  margin-top: 20rpx;
}

.category-item-text {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.category-item-icon {
  width: 40rpx;
  height: 8rpx;
  margin-top: 20rpx;
}

.category-item-subtext {
  color:gray;
}

/*热门剧本*/

.hot-list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
}

.hot-item {
  width: 160rpx;
  height: 326rpx;
  box-sizing: border-box;
  color: black;
  text-align: left;
  overflow: hidden;
  margin: 0 5% 70rpx 5%;
}

.hot-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hot-item-image {
  width: 100%;
  height: 226rpx;
  background-color: gray;
  box-shadow: 0 2px 4px #9B9B9B;
}

.hot-item-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  width: 100%;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

.hot-item-subtext {
  color: #4A4A4A;
  width: 100%;
  font-size: 24rpx;
  font-weight: normal;
}

/*新进剧本*/

.section.new {
  margin-top: 0;
}

.new-list {
  width: 90%;
  height: auto;
}

.new-item {
  width: 100%;
  height: 246rpx;
  box-sizing: border-box;
  color: black;
  text-align: left;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.new-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.new-item-image {
  width: 160rpx;
  height: 226rpx;
  background-color: gray;
  box-shadow: 0 2px 4px #9B9B9B;
}

.new-item-text {
  font-size: 32rpx;
  flex: 1;
  margin-left: 20rpx;
  line-height: 16rpx;
  margin-top: 10rpx;
  font-weight: bold;
}

.new-item-subtext {
  color:#4A4A4A;
  width: 100%;
  font-size: 24rpx;
  line-height: 26rpx;
  font-weight: normal;
}